{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs", // immutable-js wants commonjs
    "esModuleInterop": true,
    "target": "es5",
    // "target": "es2020",
    "jsx": "react",
    "allowJs": true,
    "checkJs": false,
    "baseUrl": "src/js",
    "paths": {
      "@mjtdev/*": ["lib/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@mjtdev/lib",
      "./src/types"
    ],
    "lib": ["es2016", "es2015", "dom", "es2019"]
  },
  "exclude": ["node_modules"]
}
